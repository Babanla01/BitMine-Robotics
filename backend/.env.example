PORT=5000
NODE_ENV=development

# Database Choice: Choose ONE
# 1. PostgreSQL (Recommended)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bitmine_db
DB_USER=bitmine_user
DB_PASSWORD=your_secure_password

# 2. MongoDB (Alternative)
# DB_TYPE=mongodb
# MONGODB_URI=mongodb://localhost:27017/bitmine_db
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/bitmine_db

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d

# Email (EmailJS or Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@bitmine.com

# Payment (Paystack)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# CORS
FRONTEND_URL=http://localhost:5175

